<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_100"
    tools:context=".activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/talay_light"
                    android:textSize="21sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:id="@+id/activity_my_ads_back_btn"
                    android:background="@color/transparent"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:text="@string/off_on"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:id="@+id/toggle_btn"
                    android:background="@drawable/button_border_green"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.xw.repo.BubbleSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:bsb_auto_adjust_section_mark="true"
                        app:bsb_second_track_color="@color/talay_light"
                        app:bsb_section_count="20"
                        android:id="@+id/rang_btn"
                        app:bsb_section_text_position="below_section_mark"
                        app:bsb_show_section_mark="true"
                        app:bsb_show_section_text="false"
                        app:bsb_show_thumb_text="false"
                        app:bsb_thumb_text_size="12sp"
                        app:bsb_touch_to_seek="true" />


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="@string/color_select"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:id="@+id/color_btn"
                    android:background="@drawable/button_border_red"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>



</FrameLayout>